<%- include ('../layout/main', {title: 'Edit Blog' , body:''})  %>

<h2>All Blogs</h2>
<link rel="stylesheet" href="/css/styles.css">
<% blogs.forEach(blog => {%>
    <article>
        <h3><a href="/blog/<%= blog._id %>">
            <%= blog?.title %>
        </a></h3>
        <p>
            <%= blog?.body?.substring(0, 100) %>
        </p>
    </article>
<% }) %>
