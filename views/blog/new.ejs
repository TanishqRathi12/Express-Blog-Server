<%- include ('../layout/main', {title: 'Create Blog' , body:''})  %>


<h2>Create a new blog</h2>
<form action="/blog" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
    <label for="body">Body</label>
    <textarea type="text" name="body" id="text-body" placeholder="Type your blog content here..." oninput="autoResize(this)"></textarea>

    <button id="button" type="submit">Create new Blog</button>
</form>

<script>
    function autoResize(e){
        e.style.height = 'auto';
        e.style.height = e.scrollHeight + 'px'
    }
</script>